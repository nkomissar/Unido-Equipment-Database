<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.unido.eetdb.service.dbmodel">
	<class name="DbEntity" table="UNIDO_ENTITY" lazy="false">
	   
	    <id name="id" column="ENTITY_ID">
        	<generator class="native"/>
    	</id>
    	
    	<version name="lastUpdatedDate" column="UPDATE_DATE" type="dbtimestamp" />

    	<property name="name" column="ENTITY_NAME"/>
    	<property name="lastUpdatedBy" column="UPDATED_BY"/>
    	
    	<many-to-one name="entityTemplate" column="ENTITY_TEMPLATE_ID" unique="true" />

    	<set name="properties" table="UNIDO_ENTITY_PROPERTY" lazy="false" cascade="all">
			<key column="ENTITY_ID" />
			<one-to-many class="DbEntityProperty" />
		</set>
		
		<set name="childEntities" table="UNIDO_ENTITY_LINK" lazy="false">
			<key column="PARENT_ENTITY_ID" />
			<many-to-many column="LINKED_ENTITY_ID"  class="DbEntity" />
		</set>
	</class>
</hibernate-mapping>