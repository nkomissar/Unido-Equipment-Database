<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.unido.eetdb.common.model">
	<class name="EntityProperty" table="UNIDO_ENTITY_PROPERTY" lazy="false">
	    <id name="id" column="ENTITY_PROPERTY_ID">
        	<generator class="identity"/>
    	</id>

    	<version name="version" column="VERSION" />

    	<property name="value" column="VALUE" />
    	<property name="lastUpdatedBy" column="UPDATED_BY" />
    	
    	<many-to-one name="templateProperty" fetch="join" column="TEMPLATE_PROPERTY_ID" unique="true" />
    	<many-to-one name="parentEntity" column="ENTITY_ID" not-null="true" />
	</class>
</hibernate-mapping>