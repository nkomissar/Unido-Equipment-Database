<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.unido.eetdb.service.dbmodel">
	<class name="DbEntityTemplate" table="UNIDO_ENTITY_TEMPLATE" lazy="false">
	   
	    <id name="id" column="ENTITY_TEMPLATE_ID">
        	<generator class="identity"/>
    	</id>

    	<version name="lastUpdatedDate" column="UPDATE_DATE" type="dbtimestamp" generated="always" />

    	<property name="name" column="TEMPLATE_NAME"/>
    	<property name="lastUpdatedBy" column="UPDATED_BY"/>
    	
    	<set name="properties" table="UNIDO_ENTITY_TEMPLATE_PROPERTY" lazy="true" inverse="true" cascade="all">
			<key column="ENTITY_TEMPLATE_ID" />
			<one-to-many class="DbEntityTemplateProperty" />
		</set>
	</class>
</hibernate-mapping>