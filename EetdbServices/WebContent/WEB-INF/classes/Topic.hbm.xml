<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping 
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.unido.eetdb.service.dbmodel">
	<class name="DbTopic" table="UNIDO_TOPIC" lazy="false">
	    <id name="id" column="TOPIC_ID">
        	<generator class="native"/>
    	</id>

    	<timestamp name="lastUpdatedDate" column="UPDATE_DATE" />

    	<property name="lastUpdatedBy" column="UPDATED_BY" />
		<property name="name" column="TOPIC_NAME" />
		<property name="description" />
		
		<set name="entitiesOfTopic" table="UNIDO_ENTITY_REFERENCE" lazy="false">
			<key column="TOPIC_ID" />
			<many-to-many column="ENTITY_ID"  class="DbEntity" />
		</set>
		
		<set name="childTopics" table="UNIDO_TOPIC_LINK" lazy="false">
			<key column="PARENT_TOPIC_ID" />
			<many-to-many column="LINKED_TOPIC_ID"  class="DbTopic" />
		</set>
	</class>
</hibernate-mapping>